<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashScreenFragment">
    <fragment
        android:id="@+id/signInScreenFragment"
        android:name="com.example.recordnotebook.ui.signinscreen.SignInScreenFragment"
        android:label="fragment_signup_screen"
        tools:layout="@layout/fragment_signin_screen">
        <action
            android:id="@+id/action_signInScreenFragment_to_signUpScreenFragment"
            app:destination="@id/signUpScreenFragment" />
        <action
            android:id="@+id/action_signInScreenFragment_to_main_graph"
            app:destination="@id/main_graph"
            app:popUpTo="@id/signInScreenFragment"
            app:popUpToInclusive="true">

            <argument
                android:name="userLogName"
                app:argType="string"
                app:nullable="true" />
        </action>

        <argument
            android:name="logName"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />

    </fragment>
    <fragment
        android:id="@+id/signUpScreenFragment"
        android:name="com.example.recordnotebook.ui.signupscreen.SignUpScreenFragment"
        android:label="SignUpScreenFragment"
        tools:layout="@layout/fragment_signup_screen">
        <action
            android:id="@+id/action_signUpScreenFragment_to_signInScreenFragment"
            app:destination="@id/signInScreenFragment">
            <argument
                android:name="logName"
                app:argType="string"
                app:nullable="true" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/splashScreenFragment"
        android:name="com.example.recordnotebook.ui.splashscreen.SplashScreenFragment"
        android:label="fragment_splash_screen"
        tools:layout="@layout/fragment_splash_screen">
        <action
            android:id="@+id/action_splashScreenFragment_to_signInScreenFragment"
            app:destination="@id/signInScreenFragment"
            app:popUpTo="@id/splashScreenFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashScreenFragment_to_main_graph"
            app:destination="@id/main_graph"
            app:popUpTo="@id/splashScreenFragment"
            app:popUpToInclusive="true">
            <argument
                android:name="userLogName"
                app:argType="string"
                app:nullable="true" />
        </action>
    </fragment>
    <include app:graph="@navigation/main_graph" />
</navigation>