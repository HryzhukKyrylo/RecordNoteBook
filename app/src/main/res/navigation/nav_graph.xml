<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/signinScreenFragment">

    <fragment
        android:id="@+id/signinScreenFragment"
        android:name="com.example.recordnotebook.ui.signinscreen.SignInScreenFragment"
        android:label="fragment_login_screen"
        tools:layout="@layout/fragment_signin_screen">
        <action
            android:id="@+id/action_loginScreenFragment_to_signUpScreenFragment"
            app:destination="@id/signUpScreenFragment"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_signinScreenFragment_to_mainScreenFragment"
            app:destination="@id/mainScreenFragment" />
    </fragment>
    <fragment
        android:id="@+id/signUpScreenFragment"
        android:name="com.example.recordnotebook.ui.signupscreen.SignUpScreenFragment"
        android:label="SignUpScreenFragment"
        tools:layout="@layout/fragment_signup_screen" />
    <fragment
        android:id="@+id/mainScreenFragment"
        android:name="com.example.recordnotebook.ui.mainscreen.MainScreenFragment"
        android:label="fragment_main_screen"
        tools:layout="@layout/fragment_main_screen" >
        <action
            android:id="@+id/action_mainScreenFragment_to_detailScreenFragment"
            app:destination="@id/detailScreenFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailScreenFragment"
        android:name="com.example.recordnotebook.ui.detailscreen.DetailScreenFragment"
        android:label="fragment_detail_screen"
        tools:layout="@layout/fragment_detail_screen" >
        <argument
            android:name="userData"
            app:argType="com.example.domain.models.UserNotateModel"
            app:nullable="true" />
    </fragment>

</navigation>