<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    tools:context=".ui.createscreen.CreateScreenFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:contentInsetStart="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            app:tint="@color/iconColorTint" />
    </androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardLogData"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="@dimen/small_corner_radius"
        app:cardElevation="15dp"
        app:layout_constraintBottom_toTopOf="@id/cardPassData"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <EditText
            android:id="@+id/etLogData"
            style="@style/MainText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="start|top"
            android:padding="16dp" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvLogHint"
        style="@style/MainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:alpha="0.2"
        android:clickable="false"
        android:elevation="20dp"
        android:focusableInTouchMode="false"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/create_screen_write_your_data_for_log"
        app:layout_constraintBottom_toBottomOf="@id/cardLogData"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/cardLogData" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardPassData"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:elevation="15dp"
        app:cardCornerRadius="@dimen/small_corner_radius"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardLogData">

        <EditText
            android:id="@+id/etPassData"
            style="@style/MainText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="start|top"
            android:padding="16dp" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvPassHint"
        style="@style/MainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:alpha="0.2"
        android:clickable="false"
        android:elevation="20dp"
        android:focusableInTouchMode="false"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/create_screen_write_your_data_for"
        app:layout_constraintBottom_toBottomOf="@id/cardPassData"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/cardPassData" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:elevation="16dp"
        android:src="@drawable/ic_baseline_save_as_24"
        app:backgroundTint="@color/theme_500"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/iconColorTint" />

</androidx.constraintlayout.widget.ConstraintLayout>